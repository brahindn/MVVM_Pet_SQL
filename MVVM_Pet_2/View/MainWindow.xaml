<Window x:Class="MVVM_Pet_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Pet_2"
  
        Title="MainWindow" Height="250" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Command="{Binding OpenPetsWindow}" Content="Показать питомцев" Height="50" Margin="3"/>
        <Button Grid.Column="1" Command="{Binding OpenClientsWindow}" Content="Показать клиентов" Height="50" Margin="3"/>

        
        <Image Grid.ColumnSpan="2" Grid.Row="1">

        </Image>

    </Grid>
</Window>
